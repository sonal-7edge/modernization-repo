@page "/StatusCode/{statusCode:int}"
@model ContosoUniversity.Pages.StatusCodeModel
@{
    ViewData["Title"] = $"Error {Model.ErrorStatusCode}";
}

<div class="text-center">
    <h1 class="display-1">@Model.ErrorStatusCode</h1>
    
    @switch (Model.ErrorStatusCode)
    {
        case 404:
            <p class="fs-3"><span class="text-danger">Oops!</span> Page not found.</p>
            <p class="lead">The page you're looking for doesn't exist in Contoso University.</p>
            break;
        case 403:
            <p class="fs-3"><span class="text-warning">Access Denied!</span></p>
            <p class="lead">You don't have permission to access this resource.</p>
            break;
        case 500:
            <p class="fs-3"><span class="text-danger">Server Error!</span></p>
            <p class="lead">Something went wrong on our end. Please try again later.</p>
            break;
        default:
            <p class="fs-3"><span class="text-info">Something went wrong!</span></p>
            <p class="lead">An unexpected error occurred.</p>
            break;
    }
    
    <div class="mt-4">
        <a asp-page="/Index" class="btn btn-primary">Go Home</a>
        <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
    </div>
    
    @if (Model.ErrorStatusCode == 404)
    {
        <div class="mt-5">
            <h4>Quick Links</h4>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="list-group">
                        <a asp-page="/Students/Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-users"></i> View Students
                        </a>
                        <a asp-page="/Instructors/Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-chalkboard-teacher"></i> View Instructors
                        </a>
                        <a asp-page="/Courses/Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-book"></i> View Courses
                        </a>
                        <a asp-page="/Departments/Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-building"></i> View Departments
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>

<style>
    .display-1 {
        font-size: 6rem;
        font-weight: 300;
        line-height: 1.2;
    }
    
    .list-group-item {
        border: 1px solid #dee2e6;
        margin-bottom: 0.5rem;
        border-radius: 0.375rem;
    }
    
    .list-group-item:hover {
        background-color: #f8f9fa;
        transform: translateY(-2px);
        transition: all 0.2s ease-in-out;
    }
</style>